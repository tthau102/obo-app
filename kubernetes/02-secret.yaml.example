---
# This is a template file. DO NOT commit actual secrets to Git!
# Create actual secret with:
# kubectl create secret generic obo-secret \
#   --from-literal=DB_PASSWORD='your_database_password' \
#   --from-literal=JWT_SECRET='your_jwt_secret_256bit' \
#   --namespace=obo-ns
#
# Generate JWT secret: openssl rand -base64 32

apiVersion: v1
kind: Secret
metadata:
  name: obo-secret
  namespace: obo-ns
  labels:
    app: obo-app
type: Opaque
stringData:
  DB_PASSWORD: "REPLACE_WITH_ACTUAL_PASSWORD"
  JWT_SECRET: "REPLACE_WITH_ACTUAL_JWT_SECRET_256BIT"
